@{
    Layout = "Shared/_Layout.cshtml";
}

<h1>@Model["stylist"].GetStylistName()</h1>

<h2>Add a client:</h2>

<form action="/stylist/@Model["stylist"].GetStylistId()/clients" method="post">
    <input id="stylist" type="hidden" name="stylist" value='@Model["stylist"].GetStylistId()'>
    <label for="client">Client Name:</label>
    <input type="text" name="client" id="client" class="form-control">
    <button type="submit" class="btn btn-success">Add</button>
</form>


<div class="row">
    <h1>Clients</h1>
</div>


<div class="row">

    <div class="col-md-6">
        <ul>
            @foreach (var client in @Model["client"])
            {
                <h3>@client.GetClientName() | <a href="/clients/@client.GetClientId()/edit">Edit</a> | <a href="/clients/@client.GetClientId()/delete">Delete</a></li></h3>
            }
        </ul>
    </div>
</div>
